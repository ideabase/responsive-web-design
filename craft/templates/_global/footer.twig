<footer class="group" role="contentinfo">
	<div class="footer-inner">
		<div class="footer-contact-information">
			{{ footer.body }}
			{% for instructor in craft.entries.section('instructors').all() %}
				<p><a class="footer-instructor" href="mailto:{{ instructor.instructorInformation.one().emailAddress }}">Instructor: {{ instructor.title }}</a></p>
			{% endfor %}
			<div class="footer-supplemental">
				{% for block in footer.hyperlink.all() %}
					<a href="{{ block.linkUrl }}">{{ block.linkText }}</a>
				{% endfor %}
			</div>
		</div>
		<div class="footer-logo">
			<img src="{{ footer.image.one().asset.one().url }}" alt="{{ footer.image.one().altText }}" />
		</div>
	</div>
</footer>
